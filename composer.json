{
    "name": "blendwerk/symfony-skeleton",
    "type": "project",
    "description": "A customized version of symfony/website-skeleton",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=7.4",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "symfony/flex": "^1.3.1"
    },
    "flex-require": {
        "sensio/framework-extra-bundle": "^5.2",
        "symfony/apache-pack": "^1.0",
        "symfony/asset": "*",
        "symfony/console": "*",
        "symfony/dotenv": "*",
        "symfony/expression-language": "*",
        "symfony/form": "*",
        "symfony/framework-bundle": "*",
        "symfony/http-client": "*",
        "symfony/intl": "*",
        "symfony/mailer": "*",
        "symfony/mime": "*",
        "symfony/monolog-bundle": "^3.1",
        "symfony/notifier": "*",
        "symfony/orm-pack": "*",
        "symfony/process": "*",
        "symfony/security-bundle": "*",
        "symfony/serializer-pack": "*",
        "symfony/string": "*",
        "symfony/translation": "*",
        "symfony/twig-pack": "*",
        "symfony/validator": "*",
        "symfony/web-link": "*",
        "symfony/webpack-encore-bundle": "*",
        "symfony/yaml": "*"
    },
    "require-dev": {
        "blendwerk/coding-standard": "^1.0",
        "ergebnis/composer-normalize": "^2.8",
        "php-parallel-lint/php-console-highlighter": "^0.5.0",
        "php-parallel-lint/php-parallel-lint": "^1.0",
        "phpstan/extension-installer": "^1.0",
        "phpstan/phpstan": "^0.12.42",
        "phpstan/phpstan-doctrine": "^0.12.19",
        "phpstan/phpstan-strict-rules": "^0.12.5",
        "phpstan/phpstan-symfony": "^0.12.7"
    },
    "flex-require-dev": {
        "symfony/debug-pack": "*",
        "symfony/maker-bundle": "^1.0",
        "symfony/profiler-pack": "*",
        "symfony/test-pack": "*"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*"
    },
    "scripts": {
        "auto-scripts": [
        ],
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "post-create-project-cmd": [
            "git init",
            "@phpunit-install",
            "yarn install",
            "rm README.md && touch README.md",
            "composer config --unset scripts.post-create-project-cmd",
            "composer normalize --ansi"
        ],
        "lint": "vendor/bin/parallel-lint --colors --exclude bin/.phpunit --exclude var --exclude vendor .",
        "phpcs": "vendor/bin/phpcs --colors",
        "phpcbf": "vendor/bin/phpcbf",
        "phpstan": "vendor/bin/phpstan analyse --ansi",
        "phpunit": "bin/phpunit --colors=always",
        "phpunit-install": "bin/phpunit install",
        "qa": [
            "@composer normalize --ansi --dry-run",
            "symfony console lint:twig templates --ansi",
            "symfony console lint:yaml config --ansi",
            "symfony console lint:container --ansi",
            "symfony console doctrine:schema:validate --ansi --skip-sync",
            "@lint",
            "@phpcs",
            "@phpunit-install",
            "@phpstan"
        ],
        "test": [
            "@phpunit"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "composer-normalize": {
            "indent-size": 4,
            "indent-style": "space"
        },
        "symfony": {
            "allow-contrib": true,
            "require": "5.2.*"
        }
    }
}
